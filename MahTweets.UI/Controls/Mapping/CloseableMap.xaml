<UserControl x:Class="MahTweets.UI.Controls.Mapping.CloseableMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:g="clr-namespace:MahTweets.UI.Controls.Mapping"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">


  <Grid x:Name="LayoutRoot">
    <Image x:Name="map" />
    <Button x:Name="btnClose" HorizontalAlignment="Right" VerticalAlignment="Top" Width="22"
            Style="{DynamicResource ButtonClearedStyle}" ToolTip="Close Image" Height="22" Command="{Binding CloseCommand}">
      <TextBlock FontFamily="{DynamicResource WebSymbols}" Foreground="{DynamicResource BlackColour}"
                 FontSize="18" Text=":" Opacity="1" Margin="0,0,0,0" />
    </Button>
  </Grid>
</UserControl>