<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:UI="clr-namespace:MahTweets.TwitterPlugin.UI" x:Class="MahTweets.TwitterPlugin.Resources.Resources"
                    mc:Ignorable="d" xmlns:Views="clr-namespace:MahTweets.TwitterPlugin.Views"
                    xmlns:Logic="clr-namespace:MahTweets.TwitterPlugin.Logic">

  <DataTemplate DataType="{x:Type UI:Tweet}">
    <Views:TweetView />
  </DataTemplate>

  <DataTemplate DataType="{x:Type UI:DirectMessageTweet}">
    <Views:DirectMessageView />
  </DataTemplate>

  <DataTemplate DataType="{x:Type Logic:FavouritesViewModel}">
    <Views:FavouritesView />
  </DataTemplate>
</ResourceDictionary>